{
  "name": "komga",
  "version": "0.71.3",
  "upstream": "0.71.3",
  "slug": "komga",
  "description": "A comics/mangas server to serve/stream pages via API ",
  "url": "https://github.com/alexbelgium/hassio-addons",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf"
  ],
  "ports": {
    "8080/tcp": 8089
  },
  "ports_description": {
    "8080/tcp": "Web UI port"
  },
  "apparmor": true,
  "privileged": ["SYS_ADMIN", "DAC_READ_SEARCH"],
  "map": [
    "media:rw",
    "config:rw",
    "share:rw",
    "ssl"
  ],
  "webui": "[PROTO:ssl]://[HOST]:[PORT:8080]",
  "environment": {
  "FB_BASEURL": "/komga",
  "KOMGA_DATABASE_BACKUP_PATH": "/config/komga/database-backup.zip",
  "KOMGA_DATABASE_FILE": "/config/komga/database.sqlite",
  "SPRING_DATASOURCE_URL": "jdbc:h2:/config/komga/database.h2",
  "SPRING_ARTEMIS_EMBEDDED_DATA_DIRECTORY": "/config/komga/artemis",
  "LOGGING_FILE_NAME": "/config/komga/logs/komga.log"
  },
  "options": {
  "networkdisks": "//server/share",
  "cifsusername": "username",
  "cifspassword": "password", 
  "smbv1": false
  },
  "schema": {
    "networkdisks": "str?",
    "cifsusername": "str?",
    "cifspassword": "str?",
    "smbv1": "bool"
  }
}
