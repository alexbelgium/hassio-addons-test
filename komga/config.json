{
  "name": "Komga",
  "version": "0.77.1",
  "upstream": "0.77.1",
  "slug": "komga",
  "description": "A comics/mangas server to serve/stream pages",
  "url": "https://github.com/alexbelgium/hassio-addons",
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "ports": {
    "8080/tcp": 8088
  },
  "ports_description": {
    "8080/tcp": "Web UI port"
  },
  "apparmor": true,
  "privileged": ["SYS_ADMIN", "DAC_READ_SEARCH"],
  "map": ["media:rw", "config:rw", "addons:rw", "backup:rw", "share:rw", "ssl"],
  "webui": "[PROTO:ssl]://[HOST]:[PORT:8080]",
  "environment": {
    "KOMGA_DATABASE_BACKUP_PATH": "/share/komga/database-backup.zip",
    "KOMGA_DATABASE_FILE": "/share/komga/database.sqlite",
    "SPRING_DATASOURCE_URL": "jdbc:h2:/share/komga/database.h2",
    "SPRING_ARTEMIS_EMBEDDED_DATA_DIRECTORY": "/share/komga/artemis",
    "LOGGING_FILE_NAME": "/share/logs/komga.log"
  },
  "options": {
    "maxmem": 200,
    "networkdisks": "//server/share",
    "cifsusername": "username",
    "cifspassword": "password",
    "smbv1": false
  },
  "schema": {
    "maxmem": "int",
    "networkdisks": "str?",
    "cifsusername": "str?",
    "cifspassword": "str?",
    "smbv1": "bool"
  }
}
